{% extends 'base.html.twig' %}

{% block title %}Accueil | laCrèche.org{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<header>
    <nav class="m-5 rounded-full bg-green-300 h-16 flex items-center justify-around">
        <div class="flex items-center gap-1">
            <figure>
                <img src=" {{ asset('images/arbre.png') }}" alt="Logo" class="w-25 h-25 overflow">
            </figure>
            <h1 class="text-grey-300">laCrèche.org</h2>
        </div>
        <button id="burger" class="md:hidden text-3xl cursor-pointer text-green-400" >
            &#9776;
        </button>
        <div id="menu" class="hidden fixed inset-0 z-50 bg-green-300 flex flex-col items-center justify-center md:static md:w-auto md:bg-transparent md:flex-row md:relative">
            <button id="close" class="absolute top-5 cursor-pointer right-5 text-4xl text-green-800 md:hidden" aria-label="Fermer le menu">&times;</button>
            <a class="block p-3 pl-6 pr-6 rounded-sm border-2 border-green-400 bg-green-400 text-xs text-white" href="/" alt="Accueil">Accueil</a>
            <a class="block p-3 pl-6 pr-6 rounded-sm border-2 border-green-400 text-xs hover:bg-green-400 hover:text-white ease-in-out duration-150 " href="/learn-more" alt="En savoir plus">En savoir plus</a>
            <a class="block p-3 pl-6 pr-6 rounded-sm border-2 border-green-400 text-xs hover:bg-green-400 hover:text-white ease-in-out duration-150 " href="/login" alt="Connexion">Connexion</a>
        </div>
    </nav>
</header>

<main>
    <div>
        <figure class="relative">
            <img class=" opacity-60 pt-10 sm:ml-15 md:ml-20 lg:ml-35 xl:ml-55" src=" {{ asset('images/tache.png') }}">
            <div class="absolute bottom-1/3 left-1/5">
                <h2 class="text-sm max-w-2/3 pb-3">Une gestion simple et effficace de votre crèche.</h2>
                <a class="w-fit block p-1.5 pl-6 pr-6 rounded-sm border-2 border-green-400 bg-green-400 text-xs text-white hover:bg-white hover:text-green-400 ease-in-out duration-150" href="/login" alt="Connexion">Connexion</a>
            </div>
        </figure>
        <img class="absolute w-200 bottom-5 -z-10 lg:right-1/6" src=" {{ asset('images/arbre.png') }} ">
        <img class="absolute w-200 bottom-0 -z-20 lg:right-1/6" src=" {{ asset('images/sol.png') }} ">
    </div>
</main>
<footer>
</footer>
{% endblock %}
